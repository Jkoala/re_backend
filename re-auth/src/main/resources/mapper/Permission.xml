    <!-- 根据角色id获取角色的权限列表 -->
    <select id="findPermissionByRoleId" resultType="cn.lingjiatong.re.common.entity.Permission">
        SELECT
            p.id,
            p.name,
            p.type,
            p.expression
        FROM permission p
        <where>
            p.id IN (SELECT permission_id FROM tr_role_permission trp WHERE trp.role_id = #{roleId,jdbcType=BIGINT})
        </where>
    </select>
